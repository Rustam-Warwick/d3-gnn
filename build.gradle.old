plugins {
    id 'application'
}

group 'org.apache.flink.gnn'
version '1.0-SNAPSHOT'
application{
    mainClass = "helpers.Main"
}

repositories {
    mavenCentral()
}
dependencies {
    implementation 'org.jetbrains:annotations:20.1.0'
    testImplementation 'org.junit.jupiter:junit-jupiter-api:5.7.0'
    testRuntimeOnly 'org.junit.jupiter:junit-jupiter-engine:5.7.0'

    implementation([
            'org.slf4j:slf4j-simple:1.7.26',
            'org.apache.flink:flink-clients:1.15.0',
//            'org.apache.flink:flink-table-planner_2.12:1.14.4',
            'org.apache.flink:flink-streaming-java:1.15.0',
//            'org.apache.flink:flink-python_2.12:1.15.0',
//            'org.apache.flink:flink-table-api-java-bridge_2.12:1.15.0',
//            'org.apache.flink:flink-statebackend-rocksdb_2.12:1.15.0',
            'org.apache.flink:flink-ml-iteration_2.12:2.0.0',
            'ai.ai.ai.ai.ai.ai.ai.djl:api:0.16.0',
            'ai.ai.ai.ai.ai.ai.ai.djl.pytorch:pytorch-engine:0.16.0',
            'ai.ai.ai.ai.ai.ai.ai.djl.pytorch:pytorch-native-cpu:1.10.0',

    ])

}
jar{

    manifest {
        attributes (
                'Automatic-Module-Name': 'org.apache.flink.gnn',
                'Main-Class': "helpers.Main"
        )
    }

    from {
        configurations.runtimeClasspath.collect { it.isDirectory() ? it : zipTree(it) }
    }
    duplicatesStrategy("exclude")
}
